{% extends 'OroUserBundle:User:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% block navButtons %}
    {{ parent }}
{% endblock navButtons %}


{% block content_data %}
    {% set userInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('oro_user_widget_info', {id: entity.id, viewProfile: editRoute is defined })
        }) }}
    {% endset %}
    {% set userIssueWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('app_user_widget_issues', {id: entity.id, viewProfile: editRoute is defined })
        }) }}
    {% endset %}
    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [userInformationWidget]}
            ]
        },
        {
            'title': 'Issues'|trans,
            'subblocks': [
                    {'data' : [userIssueWidget]}
            ]
        }
    ] %}

    {% set id = 'userView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}
